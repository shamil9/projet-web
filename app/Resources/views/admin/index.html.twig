{% extends 'admin/admin-base.html.twig' %}
{% block body %}
<h3>Statistiques</h3>
<div class="row">
    <div class="col-sm-3">
        <div class="statusbox">
            <h2>Prestataires</h2>
            <div class="statusbox-content">
                <strong>{{ proMembers | length }}</strong>
                <span>Total des prestataires</span>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="statusbox">
            <h2>Membres</h2>
            <div class="statusbox-content">
                <strong>{{ members | length }}</strong>
                <span>Total des membres</span>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="statusbox">
            <h2>Stages</h2>
            <div class="statusbox-content">
                <strong>{{ workshops | length }}</strong>
                <span>Total des stages</span>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="statusbox">
            <h2>Promotions</h2>
            <div class="statusbox-content">
                <strong>{{ workshops | length }}</strong>
                <span>Total des promotions</span>
            </div>
        </div>
    </div>
</div>
<h3>Derniers inscrits</h3>
<div class="row">
    <div class="col-sm-6">
        <div class="users">
            <h2>Membres</h2>
            <div class="statusbox-content">
                <table class="table">
                    <tbody>
                    {% for member in members | reverse | slice(0, 4) %}
                        <tr>
                            <td>
                                <img src="{{ avatars ~ member.picture }}" alt="{{ member.username }}">
                            </td>
                            <td class="hidden-xs visible-sm visible-md visible-lg">
                                <h2>{{ member.username }}</h2>
                                <span>Date d'inscription {{ member.registrationDate | date('d/m/y') }}</span>
                            </td>
                            <td class="right">
                                <a href="{{ path('edit_profile') }}" class="btn btn-xs btn-primary">Editer</a>
                                <a href="{{ path('user_delete') }}" class="btn btn-xs btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="users">
            <h2>Prestataires</h2>
            <div class="statusbox-content">
                <table class="table">
                    <tbody>
                    {% for proMember in proMembers | reverse | slice(0, 4) %}
                        <tr>
                            <td>
                                <a class="user" href="{{ path('pro_user_profile', {'slug': proMember.slug}) }}">
                                    <img src="{{ avatars ~ proMember.picture }}" alt="{{ proMember.username }}">
                                </a>
                            </td>
                            <td class="hidden-xs visible-sm visible-md visible-lg">
                                <h2><a href="{{ path('pro_user_profile', {'slug': proMember.slug}) }}">{{ proMember.name }}</a></h2>
                                <span>Date d'inscription {{ proMember.registrationDate | date('d/m/y') }}</span>
                            </td>
                            <td class="right">
                                <a href="{{ path('edit_profile') }}" class="btn btn-xs btn-primary">Editer</a>
                                <a href="{{ path('user_delete') }}" class="btn btn-xs btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
{% endblock %}