<div class="row">
    <div class="col-lg-8">
        {% if user.comments is empty %}
            <h3>Ajouter un commentaire</h3>
        {% endif %}
        <div id="comments-list">
            {% for comment in user.comments %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <img src="/assets/img/uploads/avatars/{{ comment.member.picture }}" class="img--30x30" alt="{{ comment.member.username }}">
                        <span class="lead">{{ comment.member.username }}</span>
            <span class="pull-right rating"
                  style="width: calc(20px * {{ comment.rating }});"></span>
                    </div>
                    <div class="panel-body">
                        {{ comment.comment }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% if user is member %}
    {{ render(controller('AppBundle:Member/Comments:new', {'slug': user.slug})) }}
    {% endif %}
</div>
