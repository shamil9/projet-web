<header class="navbar navbar-static-top navbar-default">
    <div class="container">
        <div class="row">
            <nav>
                <ul class="nav navbar-nav">
                    <li><a href="/">Accueil</a></li>
                    <li><a href="{{ path('about') }}">À propos</a></li>
                    <li><a href="{{ path("pro_member_index") }}">Prestataires</a></li>
                    <li><a href="#" class="dropdown-toggle"
                           data-toggle="dropdown"
                           role="button"
                           aria-haspopup="true"
                           aria-expanded="false">Par région <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            {% for ville in regions %}
                                <li>
                                    <a href="#">{{ ville.city }} <span class="badge pull-right">{{ ville.1 }}</span></a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li><a href="{{ path('service_list') }}">Services</a></li>
                    <li><a href="{{ path('stages_list') }}">Stages</a></li>
                    <li><a href="/">Newsletters</a></li>
                    <li><a href="{{ path('contact') }}">Contact</a></li>
                </ul>
            </nav>

            <ul class="nav navbar-nav navbar-right">
                <li>
                    {% if user %}
                        <a class="dropdown-toggle" href=""
                           data-toggle="dropdown" id="user"
                           aria-haspopup="true"
                           aria-expanded="true">{{ user.username }} <span class="caret"></span></a>
                    {% else %}
                        <a href="{{ path('login') }}">Connexion</a>
                    {% endif %}
                    <ul class="dropdown-menu" aria-labelledby="user">
                        <li><a href="{{ path('user_profile') }}">Profil</a></li>
                        <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</header>
