{% extends 'base.html.twig' %}
{% block title 'La liste de tous les stages' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for stage in workshops %}
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">
                <span class="lead">
                    <a href="{{ path('stage_index', {'slug': stage.user.slug}) }}">{{ stage.name }}</a>
                </span>
                            <span class="pull-right">{{ stage.price }}€</span>
                        </div>
                        <div class="panel-body">
                            <p>{{ stage.description }}</p>
                        </div>

                        <div class="panel-footer">
                            <span class="small">Début: {{ stage.start|date("m/d/Y à h:m") }}</span>
                            <span class="pull-right small">Fin: {{ stage.end|date("m/d/Y à h:m") }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}



