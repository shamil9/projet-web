{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% include 'partials/_slider.html.twig' %}
        <hr>
        <div class="row">
            <div class="col-lg-4">
                <h3 class="text-left">Service du mois</h3>
                {% include 'partials/_service.html.twig' %}
            </div>
            <div class="col-lg-4">
                <h3 class="text-left">Nouveaux prestataires</h3>
                {{ render(controller('AppBundle:Default:latestProUsers')) }}
            </div>
            <div class="col-lg-4">
                <h3 class="text-left">Recherche</h3>
                {% include 'partials/_search.html.twig' %}
            </div>
        </div>
    </div> <!-- /container -->
    <div class="container">
        <div class="row">
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
            var search = $('#search');
            if (!search.val())
                $('.search-btn').attr('disabled', true);

            search.on('change', function() {
                $('.search-btn').attr('disabled', false);
                if (!$('#name').val() && !$('#city').val() && !$('#cat').val())
                    $('.search-btn').attr('disabled', true);
            });
        })
    </script>
{% endblock %}
