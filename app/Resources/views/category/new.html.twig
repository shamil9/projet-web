{% extends 'base.html.twig' %}
{% block title 'Proposer une catégorie' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {{ form_start(catSubmitForm, {'action': path('category_submit')}) }}
                    <div class="form-group">
                        {{ form_label(catSubmitForm.name, 'Titre') }} <br>
                        {{ form_widget(catSubmitForm.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(catSubmitForm.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(catSubmitForm.description, 'Déscription') }} <br>
                        {{ form_widget(catSubmitForm.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(catSubmitForm.description) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(catSubmitForm.image, 'Image') }} <br>
                        {{ form_widget(catSubmitForm.image) }}
                        {{ form_errors(catSubmitForm.image) }}
                    </div>
                    {{ form_widget(catSubmitForm.promoted, {'attr': {'style': 'display: none;'}}) }}
                    <button class="btn btn-primary" type="submit"><i class="fa fa-plus"></i>Soumettre</button>
                    {{ form_end(catSubmitForm) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
