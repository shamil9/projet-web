{% extends 'base.html.twig' %}
{% block title %}Ã‰diter votre profil - {{ user.username }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row main">
            <p class="text-right"><a href="{{ path('user_delete') }}" class="btn btn-danger">Supprimer</a></p>
            <div class="main-login main-center">
                {{ form_start(form, {'attr': {'action': path('member_edit', {'user': user.id}), 'class': 'form-horizontal'}}) }}
                {#<form class="form-horizontal" enctype="multipart/form-data" method="post"#}
                      {#action="{{ path('member_edit') }}">#}

                    <div class="form-group">
                        {{ form_label(form.username, "Nom d'utilisateur") }}
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
                                </span>
                                {{ form_widget(form.username, {'attr': {
                                    'class': 'form-control',
                                    'value': user.username
                                }}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, "Adresse Email") }}
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
                                </span>
                                {{ form_widget(form.email, {'attr': {
                                    'class': 'form-control',
                                    'value': user.email
                                }}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.avatar, 'Avatar') }}
                        {{ form_widget(form.avatar) }}
                        <p class="help-block">Choisissez votre avatar (au format jpg ou png)</p>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.first, 'Mot de passe') }}
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                                {{ form_errors(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.second, 'Confirmez le mot de passe') }}
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                                {{ form_errors(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Enregistrer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
